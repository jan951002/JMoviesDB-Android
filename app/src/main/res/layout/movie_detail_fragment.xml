<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.jan.jmoviesdb.data.domain.model.Movie" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.movies.detail.MovieDetailFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieDetailImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_detail_size"
                android:contentDescription="@string/app_name" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/Theme.JMoviesDB.TextImportantStyle"
                originalTitle="@{movie}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_margin_horizontal"
                android:layout_marginTop="@dimen/item_vertical_margin"
                android:drawableStart="@drawable/ic_title" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/Theme.JMoviesDB.TextContentStyle"
                title="@{movie}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_margin_horizontal"
                android:layout_marginTop="@dimen/item_vertical_margin" />

            <com.jan.jmoviesdb.ui.custom.view.CounterView
                android:id="@+id/movieDetailCounter"
                count="@{movie.countOnCart}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_margin_horizontal"
                android:layout_marginTop="@dimen/item_vertical_margin" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/Theme.JMoviesDB.TextContentStyle"
                overview="@{movie}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_margin_horizontal"
                android:layout_marginTop="@dimen/item_vertical_margin" />
        </LinearLayout>
    </ScrollView>
</layout>